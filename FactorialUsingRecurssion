package com.combinePrograms;

///5!=5*4*3*2*1=120
public class FactorialUsingRecurssion {
	public static int factorial(int k) {
		if(k==0)
			return 1;
		else
		return k*factorial(k-1);
	}
	public static void main(String[] args) {
		//using loop
		/*
		 * int i,fact=1; int num=6; for(i=1;i<=num;i++) { fact=fact*i; }
		 * System.out.println(fact);
		 */
		
		//using recursion
		int i,fact=1;
		fact=factorial(4);
		System.out.println(fact);
	}
}
